<!DOCTYPE html>
<html lang="en">
  <%= head %>
  <body>
    <%= navbar %>
    <div class="container">
      <div class="row">
        <div class="col-lg-12">
          <h1 class="page-header"><a href="../../index.html"><%= i_header %></a> > <%= current_category[:tag] %></h1>
        </div>
          <% current_category[:images].each do |image| %>
            <div class="col-lg-3 col-md-4 col-xs-6 thumb">
              <a class="thumbnail" href="<%= image %>.html">
                <img class="img-responsive" src='<%= "#{resource_prefix}#{root_folder}#{bridge}/#{image}" %>' alt="">
              </a>
            </div>
          <% end %>
      </div>
      <hr>
      <%= footer %>
    </div>
  </body>
</html>
